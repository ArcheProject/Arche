<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.macro('arche:templates/master.pt')">
      i18n:domain="fika">
<body>
<div metal:fill-slot="content">
    <div class="row">
        <div class="col-md-3 portlets-left" tal:condition="portlets_left">
            <tal:portlets repeat="portlet portlets_left">
                <tal:portlet replace="structure portlet" />
            </tal:portlets>
        </div>
        <div class="col-md-${main_cols}">

            <div metal:define-slot="heading"><h1>${context.title}</h1></div>

            <p class="description lead"
                 tal:define="description context.description|None"
                 tal:condition="description"
                 tal:content="structure description">Description text</p>
            <div class="body"
                 tal:define="body context.body|None"
                 tal:condition="body"
                 tal:content="structure body">Body text</div>
        </div>
        <div class="col-md-3 portlets-right" tal:condition="portlets_right">
            <tal:portlets repeat="portlet portlets_right">
                <tal:portlet replace="structure portlet" />
            </tal:portlets>
        </div>
    </div>
</div>
</body>
</html>
