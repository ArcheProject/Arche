<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:define-macro="main"
      metal:use-macro="view.macro('arche:templates/master.pt')">
      i18n:domain="Arche">
<body>
<div metal:fill-slot="content">
    <div class="row">
        <div class="col-sm-3 portlets-left" tal:condition="portlets_left">
            <tal:portlets repeat="portlet portlets_left">
                <tal:portlet replace="structure portlet" />
            </tal:portlets>
        </div>
        <div class="col-sm-${main_cols}">

            <div class="portlets-top" tal:condition="portlets_top">
                <tal:portlets repeat="portlet portlets_top">
                    <tal:portlet replace="structure portlet" />
                    <div class="clearfix"><!-- --></div>
                </tal:portlets>
            </div>

            <tal:main-column metal:define-slot="main-column">
                <img tal:replace="structure view.thumb_tag(context, 'col-2', extra_cls = 'pull-right')" />

                <h1>${context.title}</h1>

                <p class="description lead"
                     tal:define="description context.description|None"
                     tal:condition="description"
                     tal:content="structure description">Description text</p>
                <div class="body"
                     tal:define="body context.body|None"
                     tal:condition="body"
                     tal:content="structure body">Body text</div>
                <div class="clearfix"><!-- --></div>

            <div class="portlets-bottom" tal:condition="portlets_bottom">
                <tal:portlets repeat="portlet portlets_bottom">
                    <tal:portlet replace="structure portlet" />
                    <div class="clearfix"><!-- --></div>
                </tal:portlets>
            </div>

            </tal:main-column>
        </div>
        <div class="col-sm-3 portlets-right" tal:condition="portlets_right">
            <tal:portlets repeat="portlet portlets_right">
                <tal:portlet replace="structure portlet" />
            </tal:portlets>
        </div>
    </div>
</div>
</body>
</html>
