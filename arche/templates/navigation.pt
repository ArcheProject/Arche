<tal:main xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Arche">
<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only" i18n:translate="">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Arche XXX</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><a href="/users">Users</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
          <li class="dropdown" tal:condition="view.userid">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Blabla
            </a>
            <ul class="dropdown-menu">
              <li class="divider"></li>
              <li><a href="/logout">Logout</a></li>
            </ul>
          </li>
          <tal:annon condition="not view.userid">
              <li><a href="/login">Login</a></li>
              <li><a href="/register">Register</a></li>
          </tal:annon>
      </ul>
        <div class="nav navbar-nav navbar-right">
            <form action="${request.resource_url(view.root,'search')}" id="search" class="navbar-form" role="search" method="get">
                <div class="input-group">
                    <input name="query" type="text" class="form-control" placeholder="Search"
                        i18n:attributes="placeholder" value="${request.GET.get('query', '')}"/>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">
                        <span class="glyphicon glyphicon-search"></span>&nbsp;
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div><!--/.nav-collapse -->
  </div><!-- /.container-->
