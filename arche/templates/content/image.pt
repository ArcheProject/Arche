<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.macro('arche:templates/base_view.pt', 'arche:templates/inline.pt')"
      i18n:domain="Arche">
<body>
<div metal:fill-slot="main-content">
    <h1>${context.title}</h1>

    <p class="description lead"
         tal:define="description context.description|None"
         tal:condition="description"
         tal:content="structure description">Description text</p>
  	<a href="${request.resource_url(context, 'view')}">
      <picture>
        <!--[if IE 9]><video style="display: none;"><![endif]-->
        <source srcset="${view.request.thumb_url(context, 'col-12', key = 'file')} 1160w,
                ${view.request.thumb_url(context, 'col-9', key = 'file')} 860w, 
                ${view.request.thumb_url(context, 'col-6', key = 'file')} 560w,
                ${view.request.thumb_url(context, 'col-4', key = 'file')} 360w" sizes="100vw">
        <!--[if IE 9]></video><![endif]-->
        <img class="img-responsive" srcset="${view.request.thumb_url(context, 'col-12', key = 'file')} 1160w" alt="${context.title}">
      </picture>
    </a>
    <div class="well well-sm">
      <span class="glyphicon glyphicon-save"></span>
      <a href="${request.resource_url(context, 'download')}" i18n:translate="">
        Download file
      </a>
      <span class="glyphicon glyphicon-eye-open"></span>
      <a href="${request.resource_url(context, 'view')}" i18n:translate="">
        View
      </a>
      <span class="glyphicon glyphicon-hdd"></span>
      <span><span i18n:translate="">Size</span> ${'%s %s' % view.byte_format(context.size)|context.size}</span>
      <span><span i18n:translate="">Type</span> ${context.mimetype}</span>
    </div>
</div>
</body>
</html>
