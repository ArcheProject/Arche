<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:v-on="http://www.w3.org/1999/xhtml"
      xmlns:v-bind="http://www.w3.org/1999/xhtml"
      metal:use-macro="view.macro('arche:templates/base_view.pt')"
      i18n:domain="Arche">
<body>
<div metal:fill-slot="main-content">

  <style>
    .select2-container .select2-selection--single.form-control {
      height: 34px;
    }
    .select2-container .select2-selection--single.form-control .select2-selection__rendered {
      line-height: unset;
      padding: 0;
    }
  </style>

  <h1 i18n:translate="">${context.title}</h1>

  <div id="user-table" data-src="${request.resource_url(context, 'users.json')}">
    <div class="input-group" >
      <select2 data-src="${request.resource_path(request.root, 'search_select2.json', query={'glob': 1,'show_hidden': 1,'id_attr': 'userid','type_name': 'User'})}" v-model="addUserSelected"></select2>
      <span class="input-group-btn">
        <button class="btn btn-default" data-target="${request.resource_url(context, 'add_user')}" v-bind:disabled="!addUserSelected" v-on:click="addUser" i18n:translate="">Add user</button>
      </span>
    </div>
    <div class="input-group" style="margin: 15px 0;">
      <span class="input-group-addon" i18n:translate="">Search</span>
      <input name="q" v-model="query" type="search" class="form-control" />
      <span class="input-group-btn">
        <button class="btn btn-default" v-on:click="reverseOrder()">
          <span v-bind:class="'glyphicon glyphicon-sort-by-attributes' + (orderReversed ? '-alt' : '')"></span>
        </button>
        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <tal:ts i18n:translate="">Order by</tal:ts> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" tal:condition="fields|None">
          <li tal:repeat="(value, desc) fields"><a v-on:click="setOrder('${value}')">${desc} <span v-if="orderBy == '${value}'" class="glyphicon glyphicon-ok"></span></a></li>
        </ul>
      </span>
    </div>
    <ul class="nav nav-pills">
      <li role="presentation" v-for="page in pages" v-bind:class="page.active ? 'active' : null">
        <a v-on:click="getPage(page.id)" v-bind:href="'#page-' + page.id">{{ page.text }}</a>
      </li>
    </ul>
    <div class="table-responsive">
      <table class="table table-responsive table-striped table-condensed table-hover">
        <thead>
        <tr>
          <th i18n:translate="">UserID</th>
          <th i18n:translate="">Name</th>
          <th i18n:translate="">Email</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <tr v-if="typeof currentPage === 'undefined'">
          <td colspan="4">
            <span class="rotate-me glyphicon glyphicon-refresh"></span>
            <tal:ts i18n:translate="">Loading...</tal:ts>
          </td>
        </tr>
        <tr v-if="typeof currentPage !== 'undefined' && currentUsers.length===0">
          <td colspan="4">
            <span class="glyphicon glyphicon-ban-circle"></span>
            <tal:ts i18n:translate="">No user matches your search.</tal:ts>
          </td>
        </tr>
        <tr v-for="user in currentUsers">
          <td><a v-bind:href="'/users/' + user.userid">{{ user.userid }}</a></td>
          <td>{{ user.first_name }} {{ user.last_name }}</td>
          <td class="text-nowrap">
            <span v-if="user.email_validated" class="glyphicon glyphicon-ok-sign text-success" title="Email verified"></span>
            <a class="email" v-bind:href="'mailto:' + user.email">{{ user.email }}</a>
          </td>
          <td class="text-right">
            <button
                    class="btn btn-sm btn-default"
                    data-target="${request.resource_path(context, 'remove_user')}"
                    v-on:click="removeUser(user.userid)">
              <span class="glyphicon glyphicon-remove text-danger"></span>
              <tal:ts i18n:translate="">Remove</tal:ts>
            </button>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
</html>
