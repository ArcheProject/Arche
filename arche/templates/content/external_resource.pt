<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="view.macro('arche:templates/base_view.pt', 'arche:templates/inline.pt')"
      i18n:domain="Arche">
<body>
<div metal:fill-slot="main-content">
    <a class="btn btn-default" href="${request.resource_url(context.__parent__)}">
      <span class="glyphicon glyphicon-th-large"></span> Back to module
    </a>
    
    <h1>${context.title}</h1>

    <div tal:condition="context.data['type'] == 'rich'" tal:content="structure context.data['html']"></div>
    <div tal:condition="context.data['type'] == 'video'" tal:content="structure context.data['html']"></div>
    <div tal:condition="context.data['type'] == 'photo'">
    	<img tal:attributes="src context.data['url']; width context.data['width']; height context.data['height']" />
    	<div tal:condition="context.data.get('author_name', 'False')">
    		<span i18n:translate="">Image by</span> 
    		<a tal:condition="context.data.get('author_url', 'False')" href="${context.data.get('author_url', '')}">
    			${context.data['author_name']}
			</a>
		</div>
    </div>
    
    <button type="button" class="btn btn-default" onclick="$('.external-resource-json').toggle()">
    	<span class="glyphicon glyphicon-th-list"></span> Json data
	</button>
    <ul class="external-resource-json" style="display:none">
    <tal:iterate repeat="data context.data">
    	<li>${data} = ${context.data[data]}</li>
    </tal:iterate>
	</ul>
	
</div>
</body>
</html>
