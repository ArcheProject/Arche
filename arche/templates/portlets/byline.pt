<tal:main xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="Arche">
<div class="portlet ">

    <div class="media">
      <div class="pull-left">
        <img tal:replace="structure view.thumb_tag(profile, 'col-1', extra_cls = 'media-object')" />
      </div>
      <div class="media-body well well-sm">
        Created by
        <a href="${request.resource_url(profile)}">${profile.title}</a>
        Published on (somedate)
      </div>
    </div>

</div>
</tal:main>
